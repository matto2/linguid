---
import Layout from "../layouts/Layout.astro";
const title = "Linguid - HOME";
---

<Layout title={title}>
  <div class="flex justify-center">
    <span
      class="mt-12 mb-4 text-3xl md:text-5xl lg:text-7xl 2xl:text-8xl font-bold bg-gradient-to-r from-violet-700 via-blue-500 to-green-400 text-transparent bg-clip-text bg-300% animate-gradient"
    >
      Redefining Language Learning
    </span>
  </div>
  <h3
    class="text-center text-xl md:text-2xl lg:text-3xl 2xl:text-4xl text-violet-300"
  >
    Immerse yourself in the future of linguistic mastery
  </h3>
</Layout>
